- if( have_rows('contact_info') ):
	- while ( have_rows('contact_info') ) : the_row();
		.contact-section__contact-info
			- if( get_row_layout () == 'contact_info_content' ):
				- if( have_rows('contact_info_repeater') ):
					- while ( have_rows('contact_info_repeater') ) : the_row();
						:php
							$options = get_sub_field('options');
							$map = get_sub_field('map');
							$heading  = get_sub_field('heading');
							$address = get_sub_field('address');
							$city = get_sub_field('city');
							$state = get_sub_field('state');
							$zip = get_sub_field('zip');
							$email = get_sub_field('email');
							$phone = get_sub_field('phone');
							
						.contact-section__contact-info__item
							- if (is_array($options) && in_array('map', $options)) :
								#map_canvas.contact-section__contact-info__item__map
								//
									script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDPdSBDM7TyYv73GdZZvorLRpqTyQ3bHL0")
									
								script.
									function initialize() {
										var myLatlng = new google.maps.LatLng(<?php echo $map['lat']; ?>, <?php echo $map['lng']; ?>);
										var myOptions = {
											zoom: 15,
											center: myLatlng,
											mapTypeId: google.maps.MapTypeId.ROADMAP
										}
										var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
									}

									function loadScript() {
										var script = document.createElement("script");
										script.type = "text/javascript";
										script.src = "https://maps.google.com/maps/api/js?sensor=false&key=AIzaSyDPdSBDM7TyYv73GdZZvorLRpqTyQ3bHL0&callback=initialize";
										document.body.appendChild(script);
									}
									window.onload = loadScript;
							- endif;

							- if ($address && $city && $state && $zip) :
								h4 Address
								ul.contact-section__contact-info__item__address
									li
										span.contact-section__contact-info__item__address__street
											- echo $address;
									li
										span.contact-section__contact-info__item__address__city
											- echo $city;
										span.contact-section__contact-info__item__address__state
											- echo $state;
										span.contact-section__contact-info__item__address__zip
											- echo $zip;
							- endif;

							- if ($email) :
								h4 Email
								.contact-section__contact-info__item__email
									a(href!="mailto:<?php echo $email ?>")
										- echo $email;
							- endif;
					- endwhile;
				- endif;
			- endif;

	- endwhile;
- endif;