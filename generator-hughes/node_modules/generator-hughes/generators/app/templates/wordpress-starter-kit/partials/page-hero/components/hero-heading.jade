- if ( get_row_layout() == 'hero_heading') :
			:php
				$heading = get_sub_field('heading');
				$options = get_sub_field('options');
				
				$image = get_sub_field('logo');
				$url = $image['url'];
				$title = $image['title'];
				$alt = $image['alt'];
				$caption = $image['caption'];

				// thumbnail
				$size = 'thumbnail';
				$thumb = $image['sizes'][ $size ];
				$width = $image['sizes'][ $size . '-width' ];
				$height = $image['sizes'][ $size . '-height' ];

			- if ($options == 'logo' ) :
				h1.page-hero__heading.page-hero__heading--logo
					img(src=$url alt="Krinle.it Logo")
			- endif;
			
			- if ($options == 'text' ) :
				h1.page-hero__heading.page-hero__heading--text
					- echo $heading;
			- endif;
			
	- endif;