- if( get_row_layout() == 'content_slider' ):
	section.content-slider
		link(rel="stylesheet" media="all" href="<?php echo get_template_directory_uri() ?>/css/components/content-slider.css")
		- if( have_rows('slider_content_repeater') ):
			.content-slider__slider_content_repeater.swiper-wrapper
				- while ( have_rows('slider_content_repeater') ) : the_row();
					- $bg_image = get_sub_field('background_image');
					- $options = get_sub_field('options');
					- $url = $bg_image['url'];
					- $title = $bg_image['title'];
					- $alt = $bg_image['alt'];
					- $caption = $bg_image['caption'];
					- $size = 'hero-images';
					- $thumb = $bg_image['sizes'][ $size ];
					- $width = $bg_image['sizes'][ $size . '-width' ];
					- $height = $bg_image['sizes'][ $size . '-height' ];
					.content-slider__slide.swiper-slide
						.content-slider__slide__inner
							| <div class="content-slider__slide__content
							| <?php if($options == 'left') : ?> content-slider__slide__content--left <?php endif; ?>
							| <?php if($options == 'center') : ?> content-slider__slide__content--center <?php endif; ?>
							| <?php if($options == 'right') : ?> content-slider__slide__content--right <?php endif; ?>
							| ">
							- while ( have_rows('slider_content') ) : the_row();
								- get_template_part('partials/content-slider/components/slide-heading');
								- get_template_part('partials/content-slider/components/slide-subheading');
								- get_template_part('partials/content-slider/components/slide-content');
								- get_template_part('partials/content-slider/components/call-to-action');
							- endwhile;
							| </div>
						.content-slider__slide__overlay
						.content-slider__slide__background
							img(src=$url)
				- endwhile;
			.content-slider__pagination
			.content-slider__prev
				i.fa.fa-arrow-circle-o-left(aria-hidden="true")
			.content-slider__next
				i.fa.fa-arrow-circle-o-right(aria-hidden="true")
		- endif;
- endif;