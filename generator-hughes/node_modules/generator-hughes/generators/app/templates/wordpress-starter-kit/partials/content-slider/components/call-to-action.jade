- if ( get_row_layout() == 'call_to_action') :
	.content-slider__slide__call-to-action
		:php
			$link_options = get_sub_field('link_options');
			$cta_btn_txt = get_sub_field('button_text');
			$internal_btn_link = get_sub_field('internal_link');
			$external_btn_link = get_sub_field('external_link');
		- if ($link_options == 'internal') :
			a.content-slider__slide__call-to-action--link(href=$internal_btn_link)
				button.content-slider__slide__call-to-action--button
					- echo $cta_btn_txt;
		- endif;

		- if ($link_options == 'external') :
			a.content-slider__slide__call-to-action--link(href=$external_btn_link target="_blank")
				button.content-slider__slide__call-to-action--button
					- echo $cta_btn_txt;
		- endif;
- endif;