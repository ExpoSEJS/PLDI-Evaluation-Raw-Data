- if( get_row_layout() == 'column_section' ):
	.column-section
		.column-section__inner
			- if( have_rows('column') ):
					- while ( have_rows('column') ) : the_row();
					.column-section__column.column
						- if( have_rows('column_content') ):
							- while ( have_rows('column_content') ) : the_row();
								- get_template_part('partials/column-section/components/column-icon');
								- get_template_part('partials/column-section/components/column-header');
								- get_template_part('partials/column-section/components/column-content');
								- get_template_part('partials/column-section/components/column-cta');
								- get_template_part('partials/column-section/components/zoomable-image');
							- endwhile;
						- endif;
					- endwhile;
			- endif;
- endif;