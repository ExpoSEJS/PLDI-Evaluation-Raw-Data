:php
	$options = get_sub_field('options');
	$content_options = get_sub_field('content_options');
	
- if( get_row_layout() == 'page_hero' ):
	.page-hero
		link(rel="stylesheet" media="all" href="<?php echo get_template_directory_uri() ?>/css/components/page-hero.css")
		.page-hero__inner
			- if( have_rows('hero_content') ):
				| <div class="page-hero__content
				| <?php if($content_options == 'left') : ?> page-hero__content--left <?php endif; ?>
				| <?php if($content_options == 'center') : ?> page-hero__content--center <?php endif; ?>
				| <?php if($content_options == 'right') : ?> page-hero__content--right <?php endif; ?>
				|">
				- get_template_part('partials/page-hero/page-hero-content');
				| </div>
			- endif;
			
		.page-hero__overlay
		- if ($options === 'image') :
			- get_template_part('partials/page-hero/components/background-image');
		- endif;
		
		- if ($options === 'video') :
			- get_template_part('partials/page-hero/components/background-video');
		- endif;
		
		- if ($options === 'youtube') :
			- get_template_part('partials/page-hero/components/youtube-video');
		- endif;
		
- endif;