 $args = array(
  'showposts' => 10,
  'offset' => 1
 );
 $allPosts = new WP_Query($args);

	
- if ( $allPosts->have_posts() ) :
section.all-posts
 .all-posts__inner
  // - get_template_part('partials/blog/categories-list');
  .all-posts__post-list
   - while ( $allPosts->have_posts() ) : $allPosts->the_post();
    .all-posts__post
     .all-posts__post__inner
        - get_template_part('partials/blog/blog-page/post-list/post-image');
        - get_template_part('partials/blog/blog-page/post-list/post-content');
       .all-posts__separator
   - endwhile;
- endif