- if ( get_row_layout() == 'hero_call_to_action') :
	- if( have_rows('call_to_action') ) :
		.page-hero__call-to-action
			- while ( have_rows('call_to_action') ) : the_row();
				:php
					$cta_btn_txt = get_sub_field('button_text');
					$btn_link = get_sub_field('button_link');

				a.page-hero__call-to-action--link(href=$btn_link)
					button.page-hero__call-to-action--button
						- echo $cta_btn_txt;
			- endwhile;
	- endif;
- endif;