- if ( get_row_layout() == 'slide_heading') :
	:php
		$options = get_sub_field('options');
		$heading = get_sub_field('heading');
		
		$image = get_sub_field('image');
		$url = $image['url'];
		$title = $image['title'];
		$alt = $image['alt'];
		$caption = $image['caption'];

		// thumbnail
		$size = 'thumbnail';
		$thumb = $image['sizes'][ $size ];
		$width = $image['sizes'][ $size . '-width' ];
		$height = $image['sizes'][ $size . '-height' ];
		
	- if ($heading ) :
		h2.content-slider__slide__content__heading.content-slider__slide__content__heading--text
			- echo $heading;
	- endif;
- endif;