- if ( get_row_layout() == 'zoomable_image') :
	:php
		//SMALL IMAGE
		$image_sm = get_sub_field('image');
		// Image Vars
		$url_sm = $image_sm['url'];
		$title_sm = $image_sm['title'];
		$alt_sm = $image_sm['alt'];
		$caption_sm = $image_sm['caption'];

		// thumbnail
		$size_sm = 'thumbnail';
		$thumb_sm = $image_sm['sizes'][ $size ];
		$width_sm = $image_sm['sizes'][ $size . '-width' ];
		$height_sm = $image_sm['sizes'][ $size . '-height' ];
		
		//LARGE IMAGE
		$image_lg = get_sub_field('large_image');
		// Image Vars
		$url_lg = $image_lg['url'];
		$title_lg = $image_lg['title'];
		$alt_lg = $image_lg['alt'];
		$caption_lg = $image_lg['caption'];

		// thumbnail
		$size_lg = 'thumbnail';
		$thumb_lg = $image_lg['sizes'][ $size ];
		$width_lg = $image_lg['sizes'][ $size . '-width' ];
		$height_lg = $image_lg['sizes'][ $size . '-height' ];

	.column-section__column--zoomable-image
		img.zoom(src=$url_sm alt=$title_sm data-magnify-src=$url_lg )
- endif;