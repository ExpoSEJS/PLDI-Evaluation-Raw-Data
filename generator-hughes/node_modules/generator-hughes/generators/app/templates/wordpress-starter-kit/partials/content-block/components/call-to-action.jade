- if ( get_row_layout() == 'call_to_action') :
	.content-block__call-to-action
			:php
				$link_options = get_sub_field('options');
				$cta_btn_txt = get_sub_field('button_text');
				$internal_btn_link = get_sub_field('button_link_internal');
				$external_btn_link = get_sub_field('button_link_external');
			- if ($link_options == 'internal') :
				a.content-block__call-to-action__link(href=$internal_btn_link)
					button.content-block__call-to-action__button
						- echo $cta_btn_txt;
			- endif;

			- if ($link_options == 'external') :
				a.content-block__call-to-action__link(href=$external_btn_link target="_blank")
					button.content-block__call-to-action__button
						- echo $cta_btn_txt;
			- endif;
- endif;