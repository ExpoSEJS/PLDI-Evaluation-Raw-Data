- $image = get_sub_field('background_image');
- if( !empty($image) ): 
	// vars
	- $url = $image['url'];
	- $title = $image['title'];
	- $alt = $image['alt'];
	- $caption = $image['caption'];

	// thumbnail
	- $size = 'thumbnail';
	- $thumb = $image['sizes'][ $size ];
	- $width = $image['sizes'][ $size . '-width' ];
	- $height = $image['sizes'][ $size . '-height' ];
	.content-block__overlay
	.content-block__background
		img(src=$url)
- endif;